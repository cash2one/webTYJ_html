<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>子公司项目</title>
</head>
<body>
<div id="content-first">
    <div class="sel">
        <div class="row search-padding-10">
            <div class="col-lg-1 col-md-2 col-sm-2 text-right">
                <button type="button" class="btn btn-default btn-primary ng-binding" align="right" ui-sref="index.systemSettings.subCompany">
                    返回
                </button>
            </div>
            <div class="col-lg-1 col-md-2 col-sm-2 text-right">

            </div>

            <div class="col-lg-1 col-md-2 col-sm-2 text-right">
                项目名称 ：
            </div>
            <div class="col-lg-3 col-md-4 col-sm-4">
                <input type="text" class="form-control" placeholder="请输入项目名称" ng-model="searchSubCompanyProject.projectName">
            </div>

            <div class="col-lg-1 col-md-4 col-sm-4 text-right">
                <button type="button" class="btn btn-default btn-primary tab-btn" ng-click="currentSubCompanyProject._load();">
                    <span class="glyphicon glyphicon-search btn_icon" ></span>
                    查询
                </button>
            </div>
            <div class="col-lg-5 col-md-4 col-sm-4 text-right">
                <button type="button" class="btn btn-default btn-primary ng-binding" align="right" ui-sref="index.systemSettings.subCompany">
                    {{subCompanyName}}
                </button>
            </div>
        </div>
    </div>
    <div class="row padding">
        <div class="col-lg-12">
            <div class="search-padding-10">

                <table>
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>项目名称</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--| orderBy:'-sortDate'-->
                    <tr ng-repeat="item in currentSubCompanyProject.object.project" ng-show="item.projectId != null" ng-click="gotoWorkflow(item)" >
                        <td >{{$index+(currentSubCompanyProject.page.currentPage-1)*6}}</td>
                        <td >{{item.projectName}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="padding">

                <div class="bill_paging">
                    <span>共{{currentSubCompanyProject.object.page.totalResult}}条</span>
                    <ul class="pagination">
                        <li ng-class="{true:'disabled'}[currentSubCompanyProject.page.currentPage==1]">
                            <a href="javascript:void(0)" ng-click="currentSubCompanyProject.go(1)">首页</a>
                        </li>
                        <li ng-class="{true:'disabled'}[currentSubCompanyProject.page.currentPage==1]">
                            <a href="javascript:void(0)" ng-show="currentSubCompanyProject.hasPrevious()"
                               ng-click="currentSubCompanyProject.previous()">上一页</a>
                        </li>
                        <li ng-class="{true:'active'}[currentSubCompanyProject.page.currentPage==i]"
                            ng-repeat="i in currentSubCompanyProject.pages">
                            <a href="javascript:void(0)" ng-click="currentSubCompanyProject.go(i)">{{i}}</a>
                        </li>
                        <li ng-class="{true:'disabled'}[currentSubCompanyProject.page.currentPage==currentSubCompanyProject.page.totalPage]">
                            <a href="javascript:void(0)" ng-show="currentSubCompanyProject.hasNext()"
                               ng-click="currentSubCompanyProject.next()">下一页</a>
                        </li>
                        <li ng-class="{true:'disabled'}[currentSubCompanyProject.page.currentPage==currentSubCompanyProject.page.totalPage]">
                            <a href="javascript:void(0)"
                               ng-click="currentSubCompanyProject.go(currentSubCompanyProject.page.totalPage)">尾页</a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>
</body>
</html>