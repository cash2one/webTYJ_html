
#pm img{width:80px;height:80px;}

.doted{ height:20px; text-align:center; width:80px; margin:0 auto; }

.doted .dot_unChecked{ display:block; width:15px; height:15px; background:#e5e5e7; border:1px solid #a4a4a4; -moz-border-radius:7px; -webkit-border-radius:7px; border-radius:7px; float:left; margin-left:10px; margin-top:20px;}
.doted .dot_Check{ display:block; width:15px; height:15px; background:#02a0e7; -moz-border-radius:7px; -webkit-border-radius:7px; border-radius:7px; float:left; margin-left:10px; margin-top:20px;}

.doted .dot_unChecked:hover{ display:block; width:15px; height:15px; background:#02a0e7; -moz-border-radius:7px; -webkit-border-radius:7px; border-radius:7px; float:left; margin-left:10px; margin-top:20px;}
