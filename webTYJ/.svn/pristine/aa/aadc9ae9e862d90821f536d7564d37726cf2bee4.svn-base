<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>消息记录</title>
</head>
<body>
<div class="container-fluid">
    <!--正文-->
    <div class="row">
        <!--右侧-->
        <div class="col-lg-12 col-md-12 col-sm-12">
            <!--右侧正文内容-->
            <div class="right">
                <div class="rihgtheight">
                    <div class="row padding">
                        <div class="col-lg-12">
                            <!--人员主页导航结束-->
                            <div class="information_box1">
                                <div class="row sel_button">
                                    <div class="col-lg-2">
                                        <a ui-sref="index.systemSettings.publicNumberManagement.informationManagement">
                                            <button type="button" class="btn btn-default btn-primary">
                                                <span class="glyphicon glyphicon-arrow-left btn_icon"></span>
                                                返回
                                            </button>
                                        </a>
                                    </div>
                                    <div class="col-lg-7">
                                    </div>
                                    <!--<div class="col-lg-2">-->
                                        <!--<input  class="form-control" placeholder="消息内容" ng-model="Message.content">-->
                                    <!--</div>-->
                                    <!--<div class="col-lg-1">-->
                                        <!--<button type="button" class="btn btn-default btn-primary" ng-click="query()">-->
                                            <!--<span class="glyphicon glyphicon-search btn_icon"></span>-->
                                            <!--搜索-->
                                        <!--</button>-->
                                    <!--</div>-->
                                </div>
                                <div class="row padding">
                                    <div class="col-lg-12">
                                        <div class="u_m_reply u_m_reply_2">

                                            <textarea class="u_m_text" ng-model="msg.content" style="resize:none" ></textarea>

                                            <div class="row text-center ">
                                                <button type="button" class="btn btn-default btn-primary" ng-click="sendMsg()">
                                                    发送
                                                </button>
                                            </div>

                                        </div>
                                        <div class="u_m" ng-repeat="message in searchPaginator.object.messageList" ng-show="message.messageId!=null">
                                            <div class="u_m_img">
                                                <img src="{{message.sendUser.photo}}" width="60px" height="60px" ng-show="message.state == 1">
                                                <img src="{{subscribe.subscribePic}}" width="60px" height="60px" ng-show="message.state == 0">
                                            </div>
                                            <div class="row u_m_content">
                                                <div class="col-lg-6 col-md-6 col-sm-6">
                                                    <div class="u_m_title" ng-show="message.state == 1">
                                                        {{message.sendUser.loginname}}
                                                    </div>
                                                    <div class="u_m_title" ng-show="message.state == 0">
                                                        {{subscribe.subscribeName}}
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-6 col-sm-6 text-right">
                                                    {{message.createTime|date:'yyyy-MM-dd HH:mm:ss'}}
                                                </div>
                                                <span ng-show="message.reply == 1" style="color: red; margin-left: 20px;">已回复</span>
                                                <div class="clear">
                                                    {{message.content}}
                                                </div>
                                            </div>
                                            <div class="u_m_btn">
                                                <!--<button type="button" class="btn btn-default btn-primary">-->
                                                <!--<span class="glyphicon glyphicon-star-empty btn_icon"></span>-->
                                                <!--收藏-->
                                                <!--</button>-->
                                                <button type="button" class="btn btn-default btn-primary" ng-show="message.state == 1" ng-click="selectMessage($index)">
                                                    <span class="glyphicon glyphicon-comment btn_icon"></span>
                                                    回复
                                                </button>
                                            </div>
                                            <div class="u_m_reply" ng-show="message.show">

                                                <textarea class="u_m_text" ng-model="message.receiveMsg" style="resize:none" ></textarea>

                                                <div class="row text-center ">
                                                    <button type="button" class="btn btn-default btn-primary" ng-click="receive($index)">
                                                        发送
                                                    </button>
                                                    <button type="button" class="btn btn-default btn-primary" ng-click="message.show = false">
                                                        收起
                                                    </button>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!--右侧正文内容结束-->
        </div>
        <!--右侧结束-->
    </div>
    <!--正文结束-->
</div>
</body>
</html>