function IsNum(num) {
    var reNum = /^\d*$/;
    if (reNum.test(num)) {
        return true;
    } else {
        if (num < 0) {
            layer.alert('不能为负数', {icon: 0});
            return false;
        } else {
            layer.alert('必须为数字', {icon: 0});
            return false;
        }
    }
