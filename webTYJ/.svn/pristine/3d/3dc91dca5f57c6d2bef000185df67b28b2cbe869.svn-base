'use strict';

define(function (require) {
    var app = require('../../../app');

    app.controller('financeCollectionCtrl', ['$scope', '$http','$rootScope','$location', function ($scope,$http,$rootScope,$location) {
        var url = $rootScope.url;
        $scope.show1 = true;
        $scope.show2 = false;
        $scope.show3 = false;
        $scope.show4 = false;
        $scope.show5 = true;
        $scope.show6 = true;
        $scope.btnIndex0=1;
        $scope.financialDetail={page:{}};
        $scope.financialCounterofferTotal={page:{}};
        $scope.financialCounterofferDetail={page:{}};
        $scope.fgtId="";
        $scope.batchNumber="";
        /***查询所有的项目**/
        var userCook = JSON.parse(sessionStorage.getItem("USER_LOGIN"));
        /*$http.get(url+'/Project/listAllProject/'+userCook.companyId).success(function(data){
            $scope.projects=data.Project;
            $scope.projectImport=$scope.projects;
        });*/

        /**
         * 获取当前登录账户所属项目
         * 陈浪
         * 2016-3-31
         */
        var project=JSON.parse(sessionStorage.getItem("_project"));

        /**
         * 日期大小检测
         * @returns {boolean}
         */
        $scope.dateCheck= function () {
            if($scope.financial.tobankDate!=null&&$scope.financial.tobankDate!=''
                &&$scope.financial.deductionsDate!=null&&$scope.financial.deductionsDate!=''){
                if($scope.financial.tobankDate>$scope.financial.deductionsDate){
                    layer.msg('开始时间不能大于结束时间');
                    //$scope.financial.deductionsDate = null;
                    return false;
                }
            }
            return true;
        }

        /**
         * 根据条件分页查询总结文件
         */
        $scope.financial={page:{}};
        $scope.getTotals=function(collectionType){
            if(!$scope.dateCheck()){
                return;
            };
            var fetchFunction=function(page,callback){
                $scope.financial.page=page;
                $scope.financial.collectionType=collectionType;
                $scope.financial.collectionState=1;
                $http.post(url + '/FinancialGroupTotal/listPageFinancial', {FinancialGroupTotal:$scope.financial}).success(callback);
            };
            $scope.searchPaginator=app.get('Paginator').list(fetchFunction,6);
        };

        $scope.getTotals(0);


       // console.log($scope.searchPaginator);
        //根据总结文件查询明细文件
        $scope.datasForExport1={financialGroupDetails:[]};//需要导出的明细文件数据

        //$scope.financialDetail={page:{}};
        $scope.getDatils=function(id){
            $scope.btnIndex=id;
            var fetchDetail=function(page,callback){
                $scope.financialDetail.page=page;
                $scope.financialDetail.financialGroupTotalId=id;
                $http.post( url + '/FinancialGroupDetail/listPageFinancialGroupDetail', {FinancialGroupDetail:$scope.financialDetail}).success(callback);
            };
            $scope.searchPaginatorDetail=app.get('Paginator').list(fetchDetail,6);
        };
        //判断checkbx是否选中
        $scope.d=false;
        $scope.getAllChecks=function(item){
            var chk = document.getElementsByName("addDatas");
            for(var i=0;i<chk.length;i++){
                if( chk[i].checked==true){
                    $scope.accountRecord=item;
                    $scope.d=true;
                    return;
                }else{
                    $scope.d=false;
                }
            }
        };

        /**
         * 导出数据到excel文件
         * */
        $scope.datasForExport={financialGroupTotals:[]};//需要导出的总文件数据
        $scope.datasForExport1={financialGroupDetails:[]};//需要导出的明细文件数据
        $scope.exportToExcel=function(){
            if($scope.d==false){
                layer.msg("请先选择导出项 ",{icon:0});
            }else if($scope.d==true) {
                layer.confirm("是否导出总结文件？",
                    {btn : ['是','否']},function(){
                        if(angular.isUndefined($scope.accountRecord)){
                            layer.msg("请选择要导出的文件 ",{icon:0});
                            return;
                        }
                        window.location.href=fileUrl +"/info/exportFTotalFileTxt.do?financialGroupTotalId="+$scope.accountRecord.financialGroupTotalId;
                        layer.msg("导出总结文件成功 ",{icon:0});
                        layer.confirm("是否导出明细文件？",
                            {btn : ['是','否']},function(){
                                window.location.href=fileUrl +"/info/exportFDetailFileTxt.do?financialGroupTotalId="+$scope.accountRecord.financialGroupTotalId;
                                layer.msg("导出明细文件成功 ",{icon:0});
                            })
                    })
            }
            //$scope.getTotals();
        };
        /**
         * 新建托收生成提出文件
         * 毛高飞
         * 2016-6-03
         */
        $scope.exportToNewTxt=function(){
            if(angular.isUndefined($scope.fgtId)||$scope.fgtId == null){
                layer.msg("未生成托收记录 ",{icon:0});
                return;
            }
            layer.confirm("是否导出总结文件？",
                {btn : ['是','否']},function(){
                    window.location.href=fileUrl +"/info/exportFTotalFileTxt.do?financialGroupTotalId="+$scope.fgtId;
                    layer.msg("导出总结文件成功 ",{icon:0});
                    layer.confirm("是否导出明细文件？",
                        {btn : ['是','否']},function(){
                            window.location.href=fileUrl +"/info/exportFDetailFileTxt.do?financialGroupTotalId="+$scope.fgtId;
                            layer.msg("导出明细文件成功 ",{icon:0});
                            $scope.finance();
                        })
                })
        };
        /**
         * maogaofei
         * 2016-06-06
         * 根据总结文件查询明细
         * @param id
         */
        $scope.getDatilsByTotalId=function(id){
            $scope.btnIndex=id;
            var fetchDetail=function(page,callback){
                $scope.financialDetail.page=page;
                $scope.financialDetail.financialGroupTotalId=id;
                $http.post( url + '/FinancialGroupDetail/listPageFinancialGroupDetail', {FinancialGroupDetail:$scope.financialDetail}).success(callback);
            };
            $scope.searchPaginatorDetailNew=app.get('Paginator').list(fetchDetail,6);
        };
        /**
         * 新建托收
         * 毛高飞
         * 2016-5-30
         */
        $scope.createCollection = function(){
            var projectId = "aaa9f195-bb57-25e0-c4cf-774b19701c38";
           $http.get(url + '/FinancialGroupTotal/createCollection/'+projectId).success(function(data) {
                $scope.financialGroupTotal=data;
                $scope.fgtId = data.FinancialGroupTotal.financialGroupTotalId;
                $scope.getDatilsByTotalId($scope.fgtId);

            });
            $scope.show4=true;
            $scope.show5=false;
            $scope.show6=false;
        };

        /**
         * 取消托收
         * 毛高飞
         * 2016-5-30
         */
        $scope.cancelCollection = function(){
            $scope.show4=false;
            $scope.show5=true;
            $scope.show6=true;
        };

        /**
         * 导出总结文件模版，方便导入数据
         */
        $scope.exportFTotalMBFile=function(){
            layer.confirm("是否导出盘回总结文件模版？",
                {btn : ['是','否']},function(){
                    window.location.href=fileUrl +"/info/exportFTotalMBFile.do";
                    layer.msg("导出盘回总结文件模版成功 ",{icon:0});
                    layer.confirm("是否导出盘回明细文件模版？",
                        {btn : ['是','否']},function(){
                            window.location.href=fileUrl +"/info/exportMFUDetailFile.do";
                            layer.msg("导出盘回明细文件模版成功 ",{icon:0});
                        });
                });
        };
        /**
         * 导入总结文件
         */
        var fileUrl=$rootScope.fileUrl;    //上传的文件路径
        var fileTotalPath='';          //上传文件的路径
        $scope.filePath="";
        $scope.annex={
            annexAddress:'',
            annexName:'',
            relationId:''
        };
        $scope.financialGroupTotal=[];
        $scope.fTotal={page:{}};
        $scope.inportExcel = function(){
            $scope.show3=false;
            $scope.show2=true;
            $scope.filePath="";
            $scope.fileState="1";
            $(function(){
                $("#remove").html('');
                $("#remove").append('<div id="excelupload" class="zyupload"></div>');
                // 初始化插件
                $("#excelupload").zyUpload({
                    width            :   "550px",                 // 宽度
                    height           :   "auto",                 // 宽度
                    itemWidth        :   "140px",                 // 文件项的宽度
                    itemHeight       :   "115px",                 // 文件项的高度
                    url              :   fileUrl+"/FinancialFileService",  // 上传文件的路径
                    fileType         :   ["T10","T20"],// 上传文件的类型
                    fileSize         :   51200000,                // 上传文件的大小
                    multiple         :   true,                    // 是否可以多个文件上传
                    dragDrop         :   true,                    // 是否可以拖动上传文件
                    tailor           :   true,                    // 是否可以裁剪图片
                    del              :   true,                    // 是否可以删除文件
                    finishDel        :   false,  				  // 是否在上传文件完成后删除预览
                    /* 外部获得的回调接口 */
                    onSelect: function(selectFiles, allFiles){    // 选择文件的回调方法  selectFile:当前选中的文件  allFiles:还没上传的全部文件
                        //console.info(selectFiles);
                    },
                    onDelete: function(file, files){
                        //console.info(file.name);
                    },
                    onSuccess: function(file, response){          // 文件上传成功的回调方法
                        $scope.filePath = $scope.filePath+response+",";
                    },
                    onFailure: function(file, response){          // 文件上传失败的回调方法
                        layer.msg("此文件上传失败!",{icon:0});
                    },
                    onComplete: function(response){           	  // 上传完成的回调方法
                    }
                });

            });
        };
        /**
         * 根据条件分页查询回盘总结文件
         */
        $scope.getOfferTotals=function(batchNumber){
            var fetchFunction=function(page,callback){
                $scope.financialCounterofferTotal.page=page;
                $scope.financialCounterofferTotal.batchNumber=batchNumber;
                $http.post(url + '/FinancialCounterofferTotal/listPageFinancialCounterofferTotal', {FinancialCounterofferTotal:$scope.financialCounterofferTotal}).success(callback);
            };
            $scope.searchPaginatorOffer=app.get('Paginator').list(fetchFunction,6);
        };
        /**
         * maogaofei 2016-06-08
         * 根据回盘总结文件ID查询回盘明细文件
         * @param id
         */
        $scope.getOfferDatils=function(id){
            $scope.btnIndex=id;
            var fetchDetail=function(page,callback){
                $scope.financialCounterofferDetail.page=page;
                $scope.financialCounterofferDetail.financialCounterofferTotalId=id;
                $http.post( url + '/FinancialCounterofferDetail/listPageFinancialCounterofferDetail', {FinancialCounterofferDetail:$scope.financialCounterofferDetail}).success(callback);
            };
            $scope.searchPaginatorDetailOffer=app.get('Paginator').list(fetchDetail,6);
        };

        /**
         * maogaofei
         * 2016-06-06
         * 导入确认
         */
        $scope.confirmImport = function(){
            $scope.financial.fileNames = $scope.filePath;
            $http.post( url + '/FinancialGroupTotal/importFinancialFile', {FinancialGroupTotal: $scope.financial}).success(function(data){
                layer.msg(data.Info.info.$,{icon:0});
                $scope.batchNumber=data.Info.code;
                $scope.getOfferTotals($scope.batchNumber);
            });
        }
        //取消导入
        $scope.cancel=function(){
            $scope.show2=false;
            $scope.show3=true;
            $scope.searchPaginatorOffer=[];
            $scope.searchPaginatorDetailOffer=[];
        }
        $scope.financialGroupDetails=[];


        /**
         * 显示新建方案
         */
        $scope.finance=function(){
            $scope.btnIndex='';
            $scope.btnIndex0=1;
            $scope.show1 = true;
            $scope.show2 = false;
            $scope.show3 = false;
            $scope.show4=false;
            $scope.show5=true;
            $scope.show6=true;
            $scope.getTotals(0);
        };

        $scope.unionPay=function(){
            $scope.btnIndex='';
            $scope.btnIndex0=2;
            $scope.show1 = false;
            $scope.show2 = false;
            $scope.show3 = true;
            $scope.clearAll();
            $scope.getTotals(1);
        };

        //添加数据库 修改 陈浪 2016.4.8 增加是否导入明细验证
        $scope.totals={financialGroupTotals:[]};//总结文件
        $scope.details={financialGroupDetails:[]};//明细文件
        /**
         *确认导入
         */
        $scope.leading = function(){
            $scope.financial={page:{}};
            $scope.financial.batchNumber = $scope.batchNumber;
            $http.post( url + '/FinancialGroupTotal/confirmImport', {FinancialGroupTotal: $scope.financial}).success(function(data){
                layer.msg(data.Info.info.$,{icon:0});
                $scope.show1 = false;
                $scope.show2 = false;
                $scope.show3= true;
                $scope.searchPaginatorOffer=[];
                $scope.searchPaginatorDetailOffer=[];
                $scope.unionPay();
                $scope.getTotals(1);//从新查询总文件
            });
        };

        //清空数据
        $scope.clearAll=function(){
            $scope.financialGroupTotal=[];
            $scope.financialGroupDetails=[];
        }


    }]);
});

